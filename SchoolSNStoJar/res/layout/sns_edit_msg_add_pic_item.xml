<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

    <RelativeLayout
        android:id="@+id/item_grida_rl_imagezone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerInParent="true">

         <com.biznest.campusinformation.util.MyImageView  
            android:id="@+id/item_grida_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
        
        <Button 
            android:id="@+id/item_grida_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/item_grida_image"
            android:layout_alignTop="@id/item_grida_image"
            android:focusable="false"
            android:background="@drawable/sns_bt_dynamic_del_selector"
            />
    </RelativeLayout>
    
</RelativeLayout>