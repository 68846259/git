<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_picture_browse" 
    android:background="@color/background">
    <!-- top bar -->
    <RelativeLayout 
        android:id="@+id/rl_browse_topbar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/main_top_bg">
        
        <Button 
            android:id="@+id/btn_back"
            android:layout_alignParentLeft="true"
            android:background="@drawable/sns_btn_back_selector1"
            style="@style/btn_of_head"/>
        
        <TextView 
            android:id="@+id/tv_picture_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/picture_browse"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />
        
         <Button 
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sns_btn_cloud_option"/>
       
        
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/ll_gallery_zone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/rl_browse_topbar"
        android:orientation="vertical">
        
        <com.biznest.campusinformation.util.MulitPointTouchGallery
        android:id="@+id/gallery_browse"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:spacing="5dp" 
        ></com.biznest.campusinformation.util.MulitPointTouchGallery>
        
        
    </LinearLayout>
</RelativeLayout>
