<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/school_contact_item_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<!-- 
    <ImageView
        android:id="@+id/school_contact_item_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp" /> 
        -->
    
    <ImageView
        android:id="@+id/school_contact_item_iv_expanded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:focusable="false" />

    <TextView
        android:id="@+id/school_contact_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/school_contact_item_iv_expanded"
        android:gravity="center"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        
         />

    <Button
        android:id="@+id/school_contact_item_btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/sns_contacts_select_bg"
        android:focusable="false" />

</RelativeLayout>