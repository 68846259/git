<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/main_top_bg" >
           <Button
            android:id="@+id/btn_back"
            style="@style/btn_of_head"
            android:layout_alignParentLeft="true"
            android:background="@drawable/sns_backbtn_bg"
             />
        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/main_title_information"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_school_contact"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/sns_btn_school_contact_selector" />

        <Button
            android:id="@+id/edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/btn_school_contact"
            android:layout_centerVertical="true"
            android:background="@drawable/sns_edit_btn_bg" />
    </RelativeLayout>

    <!-- The PullToRefreshListView replaces a standard ListView widget. -->

    <com.biznest.campusinformation.util.PullToRefreshListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alwaysDrawnWithCache="true"
        android:cacheColorHint="@color/transparent"
        android:divider="@null" />

</LinearLayout>